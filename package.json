    "lint": "tsc && run-p lint:js lint:css",
    "lint:ts": "eslint --max-warnings 50 \"./**/*.ts\"",
    "lint:js": "eslint --fix './**/*.{js,ts}'",
    "lint:css": "stylelint './**/*.scss'",
    "lint:fix": "run-p lint:fix:js lint:fix:css",
    "lint:fix:js": "eslint --fix './**/*.{js,ts}'",
    "lint:fix:css": "stylelint --fix './**/*.scss'"
