<link rel="stylesheet" href='/src/modules/elements/button/styles/index.scss' />
{{#if href}}
  <a
    class="button {{~#if type }} --{{type}} {{else}} --primary {{~/if }} {{~#if fluid }} --fluid {{~/if }}  {{~#if textAlign }} --align-{{textAlign}} {{~/if }}"
    href={{ href }}
  >
    <span class="text size-7 {{ textClass }}">
      {{ text }}
    </span>
  </a>
{{ else }}
  <button
      class="button {{~#if type }} --{{type}} {{else}} --primary {{~/if }} {{~#if fluid }} --fluid {{~/if }}  {{~#if textAlign }} --align-{{textAlign}} {{~/if }}"
  >
    <span class="text size-7 {{ textClass }}">
      {{ text }}
    </span>
  </button>
{{/if}}

