<link rel="stylesheet" href={{ absolute '/src/modules/elements/button/styles/index.scss' }} type="text/css" />
{{#if href}}
  <a class="button {{~#if type }} --{{type}} {{else}} --primary {{~/if }} {{~#if fluid }} --fluid {{~/if }}" href={{ href }} >
    <span class="text size-7 {{ textClass }}">
      {{ text }}
    </span>
  </a>
{{ else }}
  <button class="button {{~#if type }} --{{type}} {{else}} --primary {{~/if }} {{~#if fluid }} --fluid {{~/if }}" >
    <span class="text size-7 {{ textClass }}">
      {{ text }}
    </span>
  </button>
{{/if}}

