{{#if href}}
  <a
    class="{{ styles.button ~}}
    {{~#if secondary }}
      {{ styles.secondary }}
    {{ else if tertiary }}
     {{ styles.tertiary }}
    {{ else if primary }}
      {{ styles.primary }}
    {{else}}
      {{ styles.tertiary }}
    {{~/if }}

    {{~#if fluid }}
      {{ styles.fluid }}
    {{~/if }}

    {{~#if alignLeft }}
      {{ styles.alignLeft }}
    {{~/if }}"
    href={{ href }}
  >
    <span class="text size-7 {{ class }}">
      {{ text }}
    </span>
  </a>
{{ else }}
  <button
    class="{{ styles.button ~}}
    {{~#if secondary }}
      {{ styles.secondary }}
    {{ else if tertiary }}
      {{ styles.tertiary }}
    {{ else if primary }}
      {{ styles.primary }}
    {{else}}
      {{ styles.tertiary }}
    {{~/if }}

    {{~#if alignLeft }}
      {{ styles.alignLeft }}
    {{~/if }}"
  >
    <span class="text size-7 {{ class }}">
      {{ text }}
    </span>
  </button>
{{/if}}

