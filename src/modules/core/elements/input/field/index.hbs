<input
  class="
    {{ styles.field }}
    {{#if validation.error }}
      {{ styles.error }}
    {{/if }}
        text
        size-7
        font-weight-500
      "
  type="{{ htmlType }}"
  name="{{ name }}"
  id="{{ id }}"
  value="{{ value }}"
  {{#if disabled }}
  disabled
  {{/if }}
  tabindex="0"
/>
