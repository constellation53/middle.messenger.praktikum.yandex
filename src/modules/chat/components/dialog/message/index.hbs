<div class="
  {{ styles.message }}
  {{#if isMy }}
    {{ styles.isMy }}
  {{else if isImage }}
    {{ styles.image }}
  {{ else }}
    {{ styles.text }}
  {{/if}}
  ">
  <div class="{{ styles.content }} text size-9">
    {{~#if isImage }}
      <img class="{{ styles.imageContent }}" src="{{ content }}" loading="lazy" />
    {{else}}
      <div class="text font-weight-500">
        {{~content~}}
      </div>
    {{~/if}}
  </div>
  <time class="{{ styles.time }} text size-14" datetime="{{ fullTime }}">
    {{ time }}
  </time>
</div>
