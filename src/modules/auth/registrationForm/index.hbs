<form class="{{ styles.registrationForm }} center">
  <fieldset class="{{ styles.fieldset }}">
    <legend class="{{ styles.legend }} text font-weight-500 size-2">Регистрация</legend>
    <div class="{{ styles.fieldsWrapper }}">
      <div>
        {{!> elements/input/input name="email" id="email" type="text" value="pochta@yandex.ru" label="Почта"}}
      </div>
      <div>
        {{!> elements/input/input name="login" id="login" type="text" value="ivanivanov" label="Логин"}}
      </div>
      <div>
        {{!> elements/input/input name="first_name" id="first_name" type="text" value="Иван" label="Имя"}}
      </div>
      <div>
        {{!> elements/input/input name="second_name" id="second_name" type="text" value="Иванов" label="Фамилия"}}
      </div>
      <div>
        {{!> elements/input/input name="phone" id="phone" type="text" value="+7 (909) 967 30 30" label="Телефон"}}
      </div>
      <div>
        {{!> elements/input/input name="password" id="password" type="password" value="123456789123" label="Пароль" isError=true}}
      </div>
      <div>
        {{!> elements/input/input name="password" id="oldPassword" type="password" value="123456789123" label="Пароль (ещё раз)" isError=true errorMessage="Пароли не совпадают"}}
      </div>
    </div>
    <div class="{{ styles.buttonWrapper }}">
      {{!> elements/button/button text="Создать аккаунт" fluid=true }}
    </div>
    {{!> elements/button/button text="Войти" type="secondary" fluid=true href=routes.singUp textClass="size-12"}}
  </fieldset>
</form>
